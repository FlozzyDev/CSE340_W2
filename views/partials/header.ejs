<header id="top-header">
  <span class="siteName">
    <a id="sitename-text" href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="tools">
    <% if (locals.loggedin) { %>
    <a id="view-account" title="Click to view your account" href="/account/"
      >Welcome, <%= locals.accountData.account_firstname %>!</a
    >
    <a id="logout-account" title="Click to log out" href="/account/logout"
      >Logout</a
    >
    <% } else { %>
    <a id="user-account" title="Click to log in" href="/account/login"
      >My Account</a
    >
    <% } %>
  </div>
</header>
