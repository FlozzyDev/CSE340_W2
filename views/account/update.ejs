<!-- Content Heading -->
<% if (title) { %>
<h1 class="account-page-header"><%= title %></h1>
<% } else { res.redirect('/') } %>

<!-- Message -->
<%- messages() %> <% if (errors) { %>
<ul class="notice-form-failed">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<!-- Update Account Form -->
<div class="account-update-form-content">
  <h2 class="account-update-form-header">Account Update</h2>
  <form action="/account/update" method="post">
    <input type="hidden" name="account_id" value="<%= locals.account_id %>" />

    <label for="account_firstname">First Name:</label>
    <input
      type="text"
      id="account_firstname"
      name="account_firstname"
      value="<%= locals.account_firstname %>"
      required />

    <label for="account_lastname">Last Name:</label>
    <input
      type="text"
      id="account_lastname"
      name="account_lastname"
      value="<%= locals.account_lastname %>"
      required />

    <label for="account_email">Email:</label>
    <input
      type="email"
      id="account_email"
      name="account_email"
      value="<%= locals.account_email %>"
      required />

    <button class="add-inventory-button" type="submit">Update Account</button>
  </form>
</div>

<!-- Change Password Form -->
<div class="account-password-update-form-content">
  <h2 class="account-update-form-header">Change Password</h2>
  <p class="account-password-update-form-text">
    Passwords must be at least 12 characters and contain at least 1 number, 1
    capital letter and 1 special character
  </p>
  <form action="/account/update-password" method="post">
    <input type="hidden" name="account_id" value="<%= locals.account_id %>" />

    <label for="account_password">New Password:</label>
    <input
      type="password"
      id="account_password"
      name="account_password"
      required
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" />

    <button class="add-inventory-button" type="submit">Change Password</button>
  </form>
</div>
